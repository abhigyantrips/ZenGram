{
  "name": "zengram",
  "displayName": "Zen Gram",
  "version": "0.0.1",
  "description": "A selective blocker for Instagram.",
  "author": "Abhigyan Trips <contact@abhigyantrips.dev>",
  "homepage": "https://github.com/abhigyantrips/zen-gram",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@types/chrome": "0.0.258",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "*://www.instagram.com/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "zengram@abhigyantrips.dev"
      }
    }
  },
  "pnpm": {
    "overrides": {
      "msgpackr@<1.10.1": ">=1.10.1",
      "svelte@<4.2.19": ">=4.2.19"
    }
  }
}